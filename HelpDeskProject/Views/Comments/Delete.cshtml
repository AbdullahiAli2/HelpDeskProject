@model HelpDeskProject.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

<h3>Ticket Comments Details</h3>


<h3>Are you sure you want to delete this?</h3>

<div>
    <hr />
    <div class="col-md-12">
        <div class="row">
            <table class="table table-bordered table-hover table-responsive">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CommentID)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.CommentID)
                    </td>
                    <th>
                        @Html.DisplayNameFor(model => model.TicketID)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Ticket.Description)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CommentText)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.CommentText)
                    </td>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.CreatedAt)
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="CommentID" />
    <div class="mt-4">
        <div class="form-group">
            <a asp-action="Index" class="btn btn-danger float-start"><i class="fa fa-backward"></i> Back to List</a>
            <button type="submit"  class="btn btn-danger float-end"> <i class="fa fa-trash"></i> Delete Comments</button>
        </div>
    </div>
</form>


