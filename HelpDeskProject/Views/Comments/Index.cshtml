@model IEnumerable<HelpDeskProject.Models.Comment>

@{
    ViewData["Title"] = "Ticket Comments";
}

<h2>Tickets Comments</h2>
<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fa fa-add"></i> Add New Tickect Comment</a>
</p>

<div class="table-responsive">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CommentText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ticket)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th>Actions </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommentText)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Ticket.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FulllName)
                    </td>
                    <td>
                        <div class="d-flex align-items-center gap-3 fs-6">
                            <a asp-action="Details" asp-route-id="@item.CommentID" class="text-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="View detail" aria-label="Views">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.CommentID" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="Edit info" aria-label="Edit">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.CommentID" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="Delete" aria-label="Delete">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
