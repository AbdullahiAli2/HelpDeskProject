@model IEnumerable<HelpDeskProject.Models.ErrorLog>

@{
    ViewData["Title"] = "Index";
}

<h1>Error Logs</h1>

<div class="table-responsive">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ErrorDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LineNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Traceback)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Timestamp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BrowserInfo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IPAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ErrorDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LineNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Traceback)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Timestamp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrowserInfo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IPAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Id)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ErrorID"> View </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
